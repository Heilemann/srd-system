{
	"name": "Old School Essentials",
	"version": "0.0.4",
	"author": "Michael Heilemann",
	"description": "System support for Old School Essentials (and other similar games, like B/X).",
	"scripts": "src/js/*.js",
	"collections": [
		{
			"type": "character",
			"singularName": "Character",
			"pluralName": "Characters",
			"description": "A player character.",
			"templates": {
				"write": "src/templates/character.hbs",
				"read": "src/templates/character.hbs"
			},
			"windowSize": "large",
			"thumbnailField": ["portrait", "token"],
			"allowCreate": "true"
		},
		{
			"type": "equipment",
			"singularName": "Equipment",
			"pluralName": "Equipment",
			"description": "A piece of equipment.",
			"templates": {
				"read": "src/templates/equipment.hbs",
				"write": "src/templates/equipment.hbs"
			},
			"windowSize": "small",
			"allowCreate": "true"
		},
		{
			"type": "npc",
			"singularName": "NPC",
			"pluralName": "NPCs",
			"description": "A non player character.",
			"templates": {
				"read": "src/templates/npc.hbs",
				"write": "src/templates/npc.hbs"
			},
			"windowSize": "medium",
			"allowCreate": "false"
		},
		{
			"type": "spells",
			"singularName": "Spell",
			"pluralName": "Spells",
			"description": "A magic effect.",
			"templates": {
				"read": "src/templates/spell.hbs",
				"write": "src/templates/spell.hbs"
			},
			"windowSize": "medium",
			"allowCreate": "false"
		},
		{
			"type": "weapons",
			"singularName": "Weapon",
			"pluralName": "Weapons",
			"description": "Things that poke, slash and bonk.",
			"templates": {
				"read": "src/templates/weapon.hbs",
				"write": "src/templates/weapon.hbs"
			},
			"windowSize": "small",
			"allowCreate": "false"
		}
	],
	"grid": {
		"type": "square",
		"size": 12,
		"unitSize": 1,
		"unit": "m"
	},
	"license": "NA"
}
