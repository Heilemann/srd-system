<script>
  function drag(e) {
    const { type, id } = e.target.dataset
    e.dataTransfer.setData(type, id)
  }
</script>

<p>
  <label for='name'>Name:</label>
  <input type="text" name='name' />
</p>

<p>
  <label for='damage'>Damage:</label>
  <input type="text" name='damage' />
  <button onclick="() => {
    sendMessage('/r {{damage}}')
  }">Roll</button>
</p>

<p>
