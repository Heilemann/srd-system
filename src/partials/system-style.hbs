<style>
  * {
    color: black;
  }

  input,
  textarea,
  button {
    background-color: white;
    color: black;
  }


  @media (prefers-color-scheme: dark) {
    * {
      color: #eee;
    }

    input,
    textarea,
    button {
      background-color: #333 !important;
      color: white !important;
    }
  }

  body {
    margin: 0;
    padding: 20px;
  }

  h1 {
    font-size: 18px;
    text-transform: uppercase;
    font-weight: 900;
    line-height: 20px;
    padding: 1px;
    margin: 0;
    text-align: center;
  }

  h2 {
    position: relative;
    font-size: 10px;
    line-height: 30px;
    color: #565656;
    overflow: hidden;
    text-transform: uppercase;
    margin-top: 15px;
    letter-spacing: 1px;
    overflow: hidden;
    display: flex;
    flex-direction: row;
  }

  h2:before,
  h2:after {
    content: "";
    flex: 1 1;
    border-bottom: 1px solid #565656;
    margin: auto;
  }

  h2:before {
    margin-right: 20px
  }

  h2:after {
    margin-left: 20px
  }

  p {
    margin-top: 10px;
  }

  label {
    font-size: 14px;
    margin: 10px 0 2px;
  }

  input[type="text"] {
    width: 100%;
  }

  input[type="text"],
  input[type="number"] {
    border-radius: 8px;
    border: none;
    padding: 5px 0 5px 10px;
  }

  input[type="color"] {
    appearance: none;
    -moz-appearance: none;
    -webkit-appearance: none;
    border-radius: 8px;
    overflow: hidden;
    width: 30px;
    height: 30px;
    border: 0;
    padding: 0;
    background: none;
    cursor: pointer;
  }

  ::-webkit-color-swatch-wrapper {
    padding: 0;
  }

  ::-webkit-color-swatch {
    border: 0;
    border-radius: 0;
  }

  ::-moz-color-swatch,
  ::-moz-focus-inner {
    border: 0;
  }

  ::-moz-focus-inner {
    padding: 0;
  }

  input[type=button],
  button {
    border-radius: 8px;
    padding: 5px 10px;
    border: none;
    background: #333;
    color: white;
  }

  textarea {
    width: 100%;
    border-radius: 8px;
    border: none;
    padding: 5px 0 5px 10px;
  }

  .grid {
    display: grid;
    grid-column-gap: 5px;
    grid-row-gap: 5px;
    align-items: center;

  }

  .tabs {
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    background: #333;
    border-radius: 8px;
    overflow: hidden;
  }

  .tabs input {
    display: none;
  }

  .tabs label {
    margin: 0;
    text-align: center;
  }

  .tabs>input+label {
    flex: 1;
    padding: 5px 10px;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
  }

  .tabs>*:hover {
    background: #ddd;
  }

  .tabs>input:checked+label {
    background: #ddd;
  }

  @media (prefers-color-scheme: dark) {
    .tabs {
      background-color: #333;
      color: white;
    }

    .tabs>*:hover {
      background: #333;
    }

    .tabs>input:checked+label {
      background: #444;
    }

  }
</style>