<script>
  function drag(e) {
    const { type, id } = e.target.dataset
    e.dataTransfer.setData(type, id)
  }

  const derp = 'clicked!'

  function clicked(e) {
    e.stopPropagation()
    console.log(e)
    alert(derp)
  }

  console.log('iframe script tag loaded and working')

  function drop(e) {
    console.log('dropped inside iframe', e)
  }
</script>
<p style='color: black'>Character Document Begins:</p>
<input name='name' />
<button onclick='console.log("click")'>Click Me</button>
<div id='iframe-character-fake-id' draggable='character' style='background: rgba(0,255,0,1); height: 50px'
  ondragstart='drag(event)'>Draggable iFrame Character</div>
<div onclick="clicked(e)" ondrop="drop(e)" droppable='equipment' style='background: rgba(255,255,0,1); height: 200px'>
  Drop equipment here
</div>